<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="RcMap.Model.Link, RcMap.Model" table="rcmap_link">    
		<id name="Id" type="Int32" unsaved-value="0">
			<column name="Id" length="4" sql-type="int" not-null="true" unique="true"/>
			<generator class="identity" />
		</id>
    <property name="Name" type="String">
      <column name="Name" length="64" sql-type="nvarchar" not-null="true" unique="true"/>
    </property>
    <property name="Slug" type="String" access="field.camelcase-underscore">
      <column name="Slug" length="64" sql-type="nvarchar" not-null="true" unique="true"/>
    </property>
		<property name="Url" type="String">
			<column name="Url" length="128" sql-type="nvarchar" not-null="true" unique="true"/>
		</property>
    <property name="Description" type="String">
      <column name="Description" length="500" sql-type="nvarchar" not-null="true"/>
    </property>        
    <many-to-one name="Category" column="CategoryId" class="RcMap.Model.Category, RcMap.Model" not-null="true" cascade="none" />
	</class>
</hibernate-mapping>
